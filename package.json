{
  "name": "telemetry-service",
  "version": "1.0.0",
  "description": "Test assignment for JustSnap",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:local": "docker compose --env-file .env up -d --force-recreate",
    "docs": "jsdoc -c jsdoc.json",
    "test": "dotenv -e ./.env.test -- node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "npm run test tests/unit",
    "test:integration": "npm run test tests/integration",
    "mongo:init": "mkdir -p mongo-init && node scripts/create-initial-monogo-config.js > ./mongo-init/init.js",
    "pg:init": "mkdir -p postgres-init && node scripts/create-initial-pg-configs.js > ./postgres-init/init.sql",
    "db:initial-config": "npm run mongo:init && npm run pg:init",
    "docker:start:db": "docker compose --env-file .env up -d mongo postgresdb",
    "docker:logs:server": "docker logs --follow telemetry-app-server",
    "docker:logs:mongo": "docker logs --follow telemetry-app-mongo",
    "docker:logs:postgres": "docker logs --follow telemetry-app-postgres",
    "docker:build": "docker compose build --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arthur-rogers/telemetry-service.git"
  },
  "author": "Artem Ryndin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arthur-rogers/telemetry-service/issues"
  },
  "homepage": "https://github.com/arthur-rogers/telemetry-service#readme",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/jest": "^30.0.0",
    "dotenv-cli": "^11.0.0",
    "jest": "^30.2.0",
    "jsdoc": "^4.0.5",
    "nodemon": "^3.1.11",
    "sequelize-cli": "^6.6.3"
  },
  "dependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "haversine-distance": "^1.2.4",
    "json-rules-engine": "^7.3.1",
    "mongoose": "^9.0.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^13.0.0"
  }
}
